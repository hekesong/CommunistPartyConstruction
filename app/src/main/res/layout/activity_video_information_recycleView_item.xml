<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_video_information_cardview"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    card_view:cardBackgroundColor="@android:color/white"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_video_information_cardview_body"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/activity_video_information_cardview_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@mipmap/video1"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/activity_video_information_cardview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>