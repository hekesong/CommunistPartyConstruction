<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_password_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.communistpartyconstruction.Activity.PasswordChangeActivity">

    <RelativeLayout
        android:id="@+id/passwordChange_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#E04949"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/passwordChange_goBack"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="密码修改"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/passwordChange_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:background="#F4F4F4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:paddingLeft="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#3c3c3c"
                android:layout_weight="3"
                android:textSize="36px"
                android:text="原密码"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="输入原密码"
                android:textSize="36px"
                android:textColor="#3c3c3c"
                android:id="@+id/passwordChange_originPassWord"
                android:inputType="textPassword"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:paddingLeft="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#3c3c3c"
                android:layout_weight="3"
                android:textSize="36px"
                android:text="新密码"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="输入新密码"
                android:textSize="36px"
                android:textColor="#3c3c3c"
                android:background="@null"
                android:id="@+id/passwordChange_newPassWord"
                android:inputType="textPassword"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:paddingLeft="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#3c3c3c"
                android:layout_weight="3"
                android:textSize="36px"
                android:text="重复新密码"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="重复输入原密码"
                android:id="@+id/passwordChange_repeatPassWord"
                android:textSize="36px"
                android:textColor="#3c3c3c"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_weight="8"/>
        </LinearLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="80%"
                android:id="@+id/passwordChange_confirmButton"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_confirmbutton"
                android:layout_marginTop="50dp"
                android:text="@string/confirmChange"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
        </android.support.percent.PercentRelativeLayout>

    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
