<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_inform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_grey"
    tools:context="com.communistpartyconstruction.Activity.InformActivity">
    <RelativeLayout
        android:id="@+id/inform_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#E04949"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/inform_goBack"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="@string/infoCheck"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ask"/>
    <com.communistpartyconstruction.Support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            app:layout_widthPercent="68%"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@drawable/submit_application_form_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infoCheckName"
                android:textColor="@color/general_title_grey"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/general_title_grey"
                android:layout_marginLeft="10dp"
                android:id="@+id/inform_name"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            app:layout_widthPercent="68%"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@drawable/submit_application_form_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infoCheckStudentID"
                android:textColor="@color/general_title_grey"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/general_title_grey"
                android:layout_marginLeft="10dp"
                android:id="@+id/inform_studentID"
                android:textSize="16sp" />
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            app:layout_widthPercent="68%"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:id="@+id/inform_button"
            android:background="@drawable/login_confirmbutton"
            android:text="@string/infoCheckInform"
            android:textColor="@color/white"/>
    </com.communistpartyconstruction.Support.PercentLinearLayout>
</LinearLayout>
