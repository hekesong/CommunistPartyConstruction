                android:layout_marginRight="10dp"
                android:textColor="@color/hint_grey"
                android:textSize="14sp"
                android:id="@+id/submitApplication_gender"
                android:paddingTop="15dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
