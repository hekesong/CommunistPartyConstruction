<?xml version="1.0" encoding="utf-8"?>
<com.communistpartyconstruction.Support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_submit_application"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.communistpartyconstruction.Activity.SubmitApplicationActivity">
    <RelativeLayout
        android:id="@+id/submitApplication_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#E04949"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/submitApplication_goBack"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="@string/submitApplication"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personalInformationForm"
        android:textSize="16sp"
        android:textColor="@color/general_title_grey"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
