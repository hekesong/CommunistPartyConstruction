<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.manger.project.communistpartyconstruction.CustomLoginActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:id="@+id/login_imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp" />
        <TextView
            android:text="电子科技大学智慧党建"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#b4b4b4"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="80%"
            android:inputType="textPersonName"
            android:background="@drawable/login_edittext"
            android:gravity="start"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/login_imageView"
            android:layout_marginTop="50dp"
            android:id="@+id/login_edittext_username"
            android:padding="10dp"
            android:textColor="#B3B3B3"
            android:textColorHint="#B3B3B3"
            android:hint="用户名" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="80%"
            android:inputType="textPassword"
            android:background="@drawable/login_edittext"
            android:ems="10"
            android:id="@+id/login_edittext_password"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/login_edittext_username"
            android:layout_alignLeft="@+id/login_edittext_username"
            android:layout_alignStart="@+id/login_edittext_username"
            android:textColor="#B3B3B3"
            android:textColorHint="#B3B3B3"
            android:hint="密码" />
        <Button
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/login_loginButton"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/login_edittext_password"
            android:layout_alignLeft="@+id/login_edittext_password"
            android:layout_alignStart="@+id/login_edittext_password"
            android:layout_alignRight="@+id/login_edittext_password"
            android:layout_alignEnd="@+id/login_edittext_password"
            android:background="@drawable/login_confirmbutton"
            android:textColor="#ffffff"/>



        <TextView
            android:text="忘记密码?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/login_forgetPassword" />
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
