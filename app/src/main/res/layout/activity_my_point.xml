<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_point"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical"
    tools:context="com.communistpartyconstruction.Activity.MyPointActivity">
    <RelativeLayout
        android:id="@+id/passwordChange_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#E04949"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/myPoint_goBack"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="@string/myPoint"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp">
        <com.communistpartyconstruction.Support.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/myPoint_headView"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myPoint_headView"
            android:layout_marginLeft="20dp"
            android:textSize="44px"
            android:id="@+id/myPoint_name"
            android:textColor="@color/hint_grey"
            android:text="姓名"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前积分116分      排名15位"
            android:id="@+id/myPoint_totalPoint"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/myPoint_name"
            android:layout_below="@+id/myPoint_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日成长"
            android:id="@+id/myPoint_todayGrow"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/myPoint_totalPoint"
            android:layout_below="@id/myPoint_totalPoint"/>
        <ProgressBar
            android:id="@+id/myPoint_progressbar"
            style="@style/StyleProgressBarMini"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_progressbar_bg"
            android:max="100"
            android:progress="50"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/myPoint_todayGrow"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/myPoint_todayGrow"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:id="@+id/myPoint_growth"
            android:textColor="@color/red"
            android:layout_toRightOf="@id/myPoint_progressbar"
            android:layout_alignTop="@+id/myPoint_todayGrow"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_grey">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/hook_true"
                android:id="@+id/myPoint_hook0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/myPointHint1"
                android:textColor="@color/hint_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:id="@+id/myPoint_done0"
                android:text="已完成"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/hook_true"
                android:id="@+id/myPoint_hook1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/myPointHint2"
                android:textColor="@color/hint_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:id="@+id/myPoint_done1"
                android:text="已完成"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/hook_true"
                android:id="@+id/myPoint_hook2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/myPointHint3"
                android:textColor="@color/hint_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:id="@+id/myPoint_done2"
                android:text="已完成"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/hook_true"
                android:id="@+id/myPoint_hook3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/myPointHint4"
                android:textColor="@color/hint_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:id="@+id/myPoint_done3"
                android:text="已完成"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/hook_true"
                android:id="@+id/myPoint_hook4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/myPointHint5"
                android:textColor="@color/hint_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:id="@+id/myPoint_done4"
                android:text="已完成"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
