<?xml version="1.0" encoding="utf-8"?>
<com.communistpartyconstruction.Support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_suggest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical"
    tools:context="com.communistpartyconstruction.Activity.SuggestActivity">
    <RelativeLayout
        android:id="@+id/suggest_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#E04949"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/suggest_goBack"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="@string/suggest"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/suggest_edittext"
            android:background="@drawable/suggest_edittext"
            android:textSize="18sp"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="@color/general_title_grey"/>
    </RelativeLayout>
    <Button
        android:layout_width="0dp"
        android:id="@+id/suggest_button"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        app:layout_widthPercent="80%"
        android:background="@drawable/login_confirmbutton"/>
</com.communistpartyconstruction.Support.PercentLinearLayout>
